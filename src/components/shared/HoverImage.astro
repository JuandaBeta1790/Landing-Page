---
import type { ImageMetadata } from "astro";
import { Picture } from "astro:assets";

interface Props {
  primaryImage: ImageMetadata;
  hoverImage: ImageMetadata;
  alt: string;
  className?: string;
  width?: number;
  height?: number;
}

const { primaryImage, hoverImage, alt, className = "", width, height } = Astro.props;
---

<div class={`relative ${className}`} style="width: ${width}px; height: ${height}px;">
  <Picture
    src={primaryImage}
    alt={alt}
    class="absolute inset-0 w-300 h-300 rounded-3xl transition-opacity duration-500 opacity-100 hover:opacity-0"
    width={width}
    height={height}
    decoding="async"
    loading="lazy"
  />
  <Picture
    src={hoverImage}
    alt={alt}
    class="absolute inset-0 w-300 h-300 rounded-3xl transition-opacity duration-500 opacity-0 hover:opacity-100"
    width={width}
    height={height}
    decoding="async"
    loading="lazy"
  />
</div>
